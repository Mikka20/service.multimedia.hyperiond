<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.multimedia.hyperiond"
       name="hyperiond"
       version="1.0.4"
       provider-name="openelec.tv">
  <requires>
    <import addon="os.openelec.tv" version="4.0"/>
    <import addon="xbmc.python" version="2.1.0"/>

  </requires>
  <extension point="xbmc.service"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>hyperiond: an ambilight controller.</summary>
    <description>
An opensource 'AmbiLight' implementation controlled using the RaspBerry Pi.

More information can be found on the wiki: https://github.com/tvdzwan/hyperion/wiki
    </description>
    <disclaimer>

    </disclaimer>
    <platform>all</platform>
  </extension>
</addon>
